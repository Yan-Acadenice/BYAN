    "tdd"
  ],
  "author": "Yan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yannsix/byan-v2.git"
  },
  "bugs": {
    "url": "https://github.com/yannsix/byan-v2/issues"
  },
  "homepage": "https://github.com/yannsix/byan-v2#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/",
    "__tests__/",
    "_bmad/",
    ".github/agents/",
    "install/",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
